#include <stdio.h>
#include <stdbool.h>

struct student {
    char surname[50];
    char name[50];
    char patronymic[50];
    int group;
    int mathematics;
    int physics;
    int chemistry;
};
void sort_outputStudents(struct student students[30], int count) {
    struct student tmp;
    bool noSwap;
    for (int i = count - 1; i >= 0; i--) {
        noSwap = true;
        for (int j = 0; j < i; j++) {
            if (students[j].group > students[j + 1].group) {
                tmp = students[j];
                students[j] = students[j + 1];
                students[j + 1] = tmp;
                noSwap = false;
            }
        }
        if (noSwap)
            break;
    }
    for (int i = 0; i < count; i++) {
        printf("%s %s %s %d %d %d %d\n", students[i].surname, students[i].name, students[i].patronymic,
               students[i].group, students[i].mathematics, students[i].physics,
               students[i].chemistry);
    }
}
void inputStudents(struct student students[], int count) {
    for (int i = 0; i < count; i++) {
        printf("Enter the student's last name: ");
        scanf("%s", students[i].surname);
        printf("Enter the student's name: ");
        scanf("%s", students[i].name);
        printf("Enter the student's middle name: ");
        scanf("%s", students[i].patronymic);
        printf("Enter the student's group: ");
        scanf("%d", &students[i].group);
        printf("Enter the math score: ");
        scanf("%d", &students[i].mathematics);
        printf("Enter a physics grade: ");
        scanf("%d", &students[i].physics);
        printf("Enter a chemistry grade: ");
        scanf("%d", &students[i].chemistry);
    }
}
int main() {
    int count = 0;
    printf("Enter the number of students: ");
    scanf("%d", &count);
    struct student students[count];
    inputStudents(students, count);
    sort_outputStudents(students, count);
    return 0;
}
